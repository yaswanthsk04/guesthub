#!/bin/sh /etc/rc.common

START=99
USE_PROCD=1
PROG=/usr/local/monitoring/docker-compose

start_service() {
    cd /usr/local/monitoring
    procd_open_instance
    procd_set_param command docker-compose up -d
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

stop_service() {
    cd /usr/local/monitoring
    docker-compose down
}

reload_service() {
    cd /usr/local/monitoring
    docker-compose up -d
}
